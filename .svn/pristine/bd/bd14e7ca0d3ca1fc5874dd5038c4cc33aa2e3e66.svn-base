#llyq-body {
    width: 100%;
    height: 100%
}

body {
    background: url('../img/01/BG.png') repeat-y ;
    /*width:1000px;*/
    /*height: 4081px;*/
    width: 100%;
    position: absolute;
    /*background-position: center center;*/
    background-size: cover;
}

.llyq-common-tail-Div1 .tail-one a {
    cursor: pointer;
    text-decoration: none;
    color: #dedfe0
}

.llyg-panda, .llyq-tail-item1 {
    cursor: pointer
}

.llyq-communicate {
    width: 62px;
    height: 280px;
    position: fixed;
    z-index: 51;
    zoom: 1;
    right: 21px;
    bottom: 240px
}

.llyq-left-bg {
    width: 55px;
    height: 1440px;
    background: url('../images/leftbg.png') no-repeat center center;
    position: absolute;
    z-index: 1;
    zoom: 1;
    left: 10px;
    top: 1000px
}

.llyq-right-bg {
    width: 55px;
    height: 1440px;
    background: url('../images/leftbg.png') no-repeat center center;
    position: absolute;
    z-index: 1;
    zoom: 1;
    right: 10px;
    top: 1000px
}

.llyq-communicate .message div {
    width: 100%;
    height: 100%
}

.llyq-communicate-detail {
    display: none;
    width: 140px;
    height: 280px;
    position: fixed;
    z-index: 51;
    zoom: 1;
    right: 92px;
    bottom: 240px;
    color: #fff;
    font-size: 14px;
    text-align: right
}

.gotop {
    display: none
}

.llyq-communicate-detail .qq-detail {
    position: absolute;
    top: 15px;
    right: 0;
    height: 70px;
    width: 0;
    display: none
}

.llyq-communicate-detail .phone-detail {
    position: absolute;
    top: 70px;
    right: 0;
    height: 68px;
    width: 0;
    line-height: 70px;
    display: none
}

.llyq-communicate-detail .weixin-detail {
    position: absolute;
    top: 138px;
    right: 0;
    width: 0;
    background: url('../images/fixerweima.png') no-repeat center right;
    height: 75px;
    display: none
}

.llyq-communicate-detail .message-detail {
    position: absolute;
    top: 210px;
    width: 0;
    right: 0;
    line-height: 67px;
    height: 70px;
    display: none
}

.llyq-communicate div {
    width: 65px;
    height: 70px;
    cursor: pointer
}

.llyq-communicate .qq {
    background: url('../images/qq.png') no-repeat 0 0
}

.llyq-communicate .phone {
    background: url('../images/phone.png') no-repeat 0 0
}

.llyq-communicate .weixin {
    background: url('../images/weixin.png') no-repeat 0 0
}

.llyq-communicate .message {
    background: url('../images/message.png') no-repeat 0 0
}

.gotop {
    width: 59px;
    height: 87px;
    position: fixed;
    right: 20px;
    bottom: 30px;
    z-index: 50;
    zoom: 1;
    cursor: pointer;
    background: url("../images/gotop.png") no-repeat center center
}

.gotop a div {
    width: 59px;
    height: 87px
}

.new, .hot {
    border-radius: 8px;
    text-align: center;
}